%h1 Edit #{@topic.title}

.col-md-8
  = form_for @topic do |f|
    .form-group
      = f.label :title
      = f.text_field :title, class: "form-control", placeholder: "#{@topic.title}"
    .form-group
      = f.submit "Save", class: "btn btn-success"
      = link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete #{@topic.title}?" }
.col-md-4
